  "version": "0.2.0",
  "configurations": [
    {
      "name": "JEST 04_patterns",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/04_patterns/node_modules/.bin/jest",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/04_patterns",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/04_patterns/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "INDEX 04_patterns",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/04_patterns/src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
